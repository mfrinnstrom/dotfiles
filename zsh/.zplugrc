# Load zplug
source ~/.zplug/init.zsh

# Let zplug manage zplug
zplug 'zplug/zplug', hook-build:'zplug --self-manage'

# Customize look & feel
zplug "mafredri/zsh-async", defer:0
zplug "sindresorhus/pure", use:pure.zsh, as:theme
zplug "chriskempson/base16-shell", use:"scripts/base16-nord.sh", defer:0

# History, autosuggestions and completions
zplug "zsh-users/zsh-autosuggestions"
zplug "zsh-users/zsh-completions"
zplug "zsh-users/zsh-syntax-highlighting", defer:2 # Should be loaded 2nd last.
zplug "zsh-users/zsh-history-substring-search", defer:3 # Should be loaded last.

# k
zplug "supercrabtree/k"

# ssh-agent
zplug 'plugins/ssh-agent', from:oh-my-zsh, ignore:oh-my-zsh.sh

# aws-cli
zplug 'plugins/aws', from:oh-my-zsh, ignore:oh-my-zsh.sh

# Install plugins if there are plugins that have not been installed
if ! zplug check --verbose; then
    printf "Install? [y/N]: "
    if read -q; then
        echo; zplug install
    fi
fi

# Then, source plugins and add commands to $PATH
zplug load
